{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
